{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-empty": "error",
    "no-extra-parens": "error",
    "curly": "error",
    "eqeqeq": "error",
    "no-empty-pattern": "error",
    "no-multi-spaces": "error",
    "comma-spacing": "error",
    "eol-last": "error",
    "no-multiple-empty-lines": "error",
    "spaced-comment": "error",
    "arrow-spacing": "error",
    "arrow-body-style": ["error", "as-needed"],
    "arrow-parens": ["error", "as-needed"],
    "no-var": "error",
    "prefer-arrow-callback": "error",
    "prefer-const": "error"
  }
}
