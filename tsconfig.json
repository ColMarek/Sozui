{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "strictNullChecks": true,
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}